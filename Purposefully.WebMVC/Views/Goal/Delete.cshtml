@model Purposefully.Models.GoalModels.GoalDetail

@{
    ViewBag.Title = "Delete";
}

<h2 style="margin-top: 5%; margin-left: 3%">Delete A Goal</h2>
<h5 style="margin-top: 3%; margin-left: 10%; margin-right: 10%;">We encourage you to edit and keep your goals even after completion. Seeing the goals you still have to work on or have completed helps you see your progress! If you do delete your goal, we will not be able to retrieve it after deletion.</h5>
<hr style="margin-bottom: 1%;" />

<h5 style="margin-left: 10%;">Are you sure you want to delete this?</h5>
<div>
    <div style="margin-left: 27%; margin-top: 2%;">
        <div class="card bg-light mb-3" style="width: 30rem; overflow-y: hidden;">
            <div class="card-header">
                <h6>Goal ID # @Html.DisplayFor(model => model.GoalId)</h6>
            </div>
            <div class="card-body">
                <h4 class="card-title">@Html.DisplayFor(model => model.GoalTitle)</h4>
                <p class="card-text d-inline-block text-wrap">@Html.DisplayFor(model => model.GoalContent)</p>
                <p class="card-text">Start Date: @Html.DisplayFor(model => model.StartDate)</p>
                <p class="card-text">End Date: @Html.DisplayFor(model => model.EndDate)</p>
                <p class="card-text">Difficulty: @Html.DisplayFor(model => model.Difficulty)/5</p>
                <h6>Completed? @Html.DisplayFor(model => model.Completed)</h6>
            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div style="margin-left: 10%; margin-top: 5%; margin-bottom: 5%;">
            <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
            <button class="form-actions btn no-color" type="button">
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-info btn-lg" })
            </button>
        </div>
    }
</div>
