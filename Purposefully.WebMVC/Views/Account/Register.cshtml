@model Purposefully.WebMVC.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="loginDiv" style="text-align: center; background-color: rgba(255, 255, 255, 0.70);">
        <form class="text-center border border-light p-5" action="#!">
            <p class="h3 mb-4" style="margin: 2%;">Create a new Account</p>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <!-- Email -->
            @Html.LabelFor(m => m.Email)
            <div class="form-group boxes">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control mb-4", @style = "width: 250px; border: 1px solid #5bc0de;" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <!-- Password -->
            @Html.LabelFor(m => m.Password)
            <div class="form-group boxes">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control mb-4", @style = "width: 250px; border: 1px solid #5bc0de;" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <!-- Confirm Password -->
            @Html.LabelFor(m => m.ConfirmPassword)
            <div class="form-group boxes">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control mb-4", @style = "width: 250px; border: 1px solid #5bc0de;" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
            <!-- Sign in button -->
            <input type="submit" value="Register" class="btn btn-outline-info my-4" style="background-color: transparent; border-color:#5bc0de; color: black; width: 100px" />
            @*<button class="btn btn-info btn-block my-4" type="submit">Sign in</button>*@
            <!-- Register -->
            <p style="color: black;">
                @Html.ActionLink("Log In", "Login", "", new { @class = "btn btn-outline-info btn-sm text-dark" })
            </p>
        </form>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
